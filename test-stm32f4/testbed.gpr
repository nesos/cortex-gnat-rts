project Testbed is

   for Main use ("testbed.adb", "generate_hard_fault.adb");
   for Languages use ("Ada", "C");
   for Source_Dirs use (".", "../test-common");
   for Object_Dir use ".build";
   for Exec_Dir use ".";
   for Target use "arm-eabi";
   for Runtime ("ada") use project'Project_Dir & "../local/stm32f4";

   package Builder is
      for Global_Configuration_Pragmas use "gnat.adc";
      for Global_Compilation_Switches ("ada") use ("-g", "-O0", "-ffunction-sections", "-fdata-sections");
      for Global_Compilation_Switches ("c") use ("-g", "-O0", "-ffunction-sections", "-fdata-sections");
      for Switches ("ada") use ("--create-map-file");
   end Builder;

   package Compiler is
      for Default_Switches ("c") use ("-g", "-O0");
      for Default_Switches ("ada") use ("-gnatqQafoy", "-gnatwaL.X");
      for Switches ("last_chance_handler.adb") use Compiler'Default_Switches ("ada") & "-O0";
   end Compiler;

   package Linker is
      for Default_Switches ("ada") use ("-Wl,-gc-sections");
      for Map_File_Option use "-Wl,-Map," & project'Project_Dir;
   end Linker;

   package Ide is
      for Connection_Tool use "openocd";
      for Program_Host use "localhost:3333";
      for Communication_Protocol use "remote";
      for Connection_Config_File use "../../../../../usr/share/openocd/scripts/board/stm32f4discovery.cfg";
   end Ide;

end Testbed;

